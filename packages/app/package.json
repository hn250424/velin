{
	"name": "velin-app",
	"productName": "Velin",
	"version": "1.0.0",
	"description": "Markdown WYSIWYG Editor",
	"main": "dist/main/main.js",
	"scripts": {
		"start": "electron-forge start",
		"test": "vitest",
		"lint": "eslint --ext .ts,.tsx .",
		"build:renderer": "vite build --config vite.renderer.config.ts",
		"build:main": "vite build --config vite.main.config.ts",
		"build:preload": "vite build --config vite.preload.config.ts",
		"build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "kill": "node ../../scripts/windows/kill-running-app.js",
    "clean": "rimraf dist",
		"package": "npm run kill && npm run clean && npm run build && electron-builder"
	},
	"keywords": [],
	"author": "hn250424",
	"license": "MIT",
	"build": {
		"appId": "com.velin.app",
		"productName": "Velin",
		"directories": {
			"output": "dist/installer"
		},
		"files": [
			"dist/renderer/**/*",
			"dist/main/**/*",
			"src/shared/**/*",
			"package.json"
		],
		"extraMetadata": {
			"main": "dist/main/main.js"
		},
		"win": {
			"icon": "src/shared/logo/logo_256.ico",
			"target": [
				"nsis"
			]
		},
		"mac": {
			"icon": "src/shared/logo/logo.png"
		},
		"linux": {
			"icon": "src/shared/logo/logo.png"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"installerIcon": "src/shared/logo/logo_256.ico",
			"uninstallerIcon": "src/shared/logo/logo_256.ico",
			"installerHeaderIcon": "src/shared/logo/logo_256.ico"
		}
	},
	"devDependencies": {
		"@electron-forge/cli": "^7.8.1",
		"@electron-forge/maker-deb": "^7.8.1",
		"@electron-forge/maker-rpm": "^7.8.1",
		"@electron-forge/maker-squirrel": "^7.8.1",
		"@electron-forge/maker-zip": "^7.8.1",
		"@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
		"@electron-forge/plugin-fuses": "^7.8.1",
		"@electron-forge/plugin-vite": "^7.8.1",
		"@electron/fuses": "^1.8.0",
		"cross-env": "^10.1.0",
		"electron": "36.4.0",
		"electron-builder": "^26.0.12",
		"sass-embedded": "^1.89.1"
	},
	"dependencies": {
		"@milkdown/crepe": "^7.12.1",
		"@milkdown/theme-nord": "^7.12.1",
		"chokidar": "^4.0.3",
		"electron-squirrel-startup": "^1.0.1",
		"inversify": "^7.5.2",
		"reflect-metadata": "^0.2.2"
	}
}
